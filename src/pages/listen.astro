---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
				transition: transform 1s ease;
				font-family: 'paralucent', sans-serif;
				font-weight: 500;
				font-size: 2em;
			}
			ul li:hover {
				transform: translateX(25px);
			}
			ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #888;
			}
			ul li a:visited {
				color: #8e32dc;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<content>
				<ul>
					<li><a href="https://podcasts.apple.com/us/podcast/personal-effects/id1635078803" target="_blank">Apple Podcasts</a></li>
					<li><a href="https://open.spotify.com/show/6mDf2h0CteqjQ7cEVHdkwq" target="_blank">Spotify</a></li>
					<li><a href="https://pca.st/ohy7cez6" target="_blank">Pocket Casts</a></li>
					<li><a href="https://www.stitcher.com/show/personal-effects-2" target="_blank">Stitcher</a></li>
					<li><a href="https://tunein.com/podcasts/Arts--Culture-Podcasts/Personal-Effects-p1711256/" target="_blank">TuneIn</a></li>
					<li><a href="https://podcasts.google.com/feed/aHR0cHM6Ly9mZWVkcy5zb3VuZGNsb3VkLmNvbS91c2Vycy9zb3VuZGNsb3VkOnVzZXJzOjExMTkyODcwMTcvc291bmRzLnJzcw" target="_blank">Google Podcasts</a></li>
					<li><a href="https://soundcloud.com/personal-effects" target="_blank">SoundCloud</a></li>
				</ul>
			</content>
			<Footer />
		</main>
	</body>
</html>
